PATH.64=$(USRDIR)/bin/$(MACH64):$(USRDIR)/bin:/usr/bin:/usr/sfw/bin:/usr/ccs/bin
PATH=$(PATH.$(BITS))

ROOT=		/

WS_ARCHIVES=	$(WS_TOP)/archives
WS_LOGS=	$(WS_TOP)/$(MACH)/logs
WS_REPO=	$(WS_TOP)/$(MACH)/repo
WS_TOOLS=	$(WS_TOP)/tools
WS_COMPONENTS=	$(WS_TOP)/components
WS_TRANSFORMS=	$(WS_TOP)/transforms
WS_INCORPORATIONS=	$(WS_TOP)/incorporations
WS_LINT_CACHE=	$(WS_TOP)/$(MACH)/pkglint-cache

COMPONENT_DIR=	$(shell pwd)
SOURCE_DIR=	$(COMPONENT_DIR)/source/$(COMPONENT_SRC)
BUILD_DIR=	$(COMPONENT_DIR)/build
PROTO_DIR=	$(BUILD_DIR)/prototype/$(MACH)

# Deprecated - to be retired in preference of $(USRDIR) and $(APPLICATION_PREFIX)
ECPREFIX=/usr

# Default system paths for software delivery - do not override at a component
# level.
ETCDIR=		/etc
VARDIR=		/var
USRDIR=		/usr
MANIFESTDIR=	/var/svc/manifest
METHODDIR=	/var/svc/method
APPDIR=		$(USRDIR)
BINDIR.32 =	$(USRDIR)/bin
BINDIR.64 =	$(USRDIR)/bin/$(MACH64)
