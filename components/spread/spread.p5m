file path=$(USRDIR)/share/man/man3/SP_multigroup_scat_multicast.3
file path=$(USRDIR)/share/man/man3/SP_poll.3
file path=$(USRDIR)/share/man/man3/SP_receive.3
file path=$(USRDIR)/share/man/man3/SP_scat_multicast.3
file path=$(USRDIR)/share/man/man3/SP_scat_receive.3
file path=$(USRDIR)/share/man/man3/libsp.3
file path=$(SYSCONFDIR)/spread.conf preserve=true mode=0644
link path=$(USRDIR)/lib/$(MACH64)/libspread.so target=libspread.so.1.0
link path=$(USRDIR)/lib/$(MACH64)/libtspread.so target=libtspread.so.1.0
link path=$(USRDIR)/lib/libspread.so target=libspread.so.1.0
link path=$(USRDIR)/lib/libtspread.so target=libtspread.so.1.0

group gid=484 groupname=spread
user gcos-field="Spread Account" group=spread uid=484 username=spread login-shell=/bin/false home-dir=$(USRDIR)/var/run
dir path=$(LOCALSTATEDIR)/log/spread owner=spread group=spread preserve=true
dir path=$(LOCALSTATEDIR)/run/spread owner=spread group=spread preserve=true

file files/spread.xml path=$(SVCMANIFEST)/site/spread.xml \
    restart_fmri=svc:/system/manifest-import:default
