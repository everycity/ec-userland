# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.upstream_url value=$(COMPONENT_PROJECT_URL)
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license $(COMPONENT_NAME).license license="$(COMPONENT_LICENSE)"

file path=$(USRDIR)/bin/$(MACH64)/spflooder
file path=$(USRDIR)/bin/$(MACH64)/spmonitor
file path=$(USRDIR)/bin/$(MACH64)/spread
file path=$(USRDIR)/bin/$(MACH64)/sptuser
file path=$(USRDIR)/bin/$(MACH64)/spuser
file path=$(USRDIR)/bin/spflooder
file path=$(USRDIR)/bin/spmonitor
file path=$(USRDIR)/bin/spread
file path=$(USRDIR)/bin/sptuser
file path=$(USRDIR)/bin/spuser
file path=$(USRDIR)/include/sp.h
file path=$(USRDIR)/include/sp_events.h
file path=$(USRDIR)/include/sp_func.h
file path=$(USRDIR)/lib/$(MACH64)/libspread.so.1.0
file path=$(USRDIR)/lib/$(MACH64)/libtspread.so.1.0
file path=$(USRDIR)/lib/libspread.so.1.0
file path=$(USRDIR)/lib/libtspread.so.1.0
file path=$(USRDIR)/share/man/man1/spflooder.1
file path=$(USRDIR)/share/man/man1/spmonitor.1
file path=$(USRDIR)/share/man/man1/spread.1
file path=$(USRDIR)/share/man/man1/sptuser.1
file path=$(USRDIR)/share/man/man1/spuser.1
file path=$(USRDIR)/share/man/man3/SP_connect.3
file path=$(USRDIR)/share/man/man3/SP_disconnect.3
file path=$(USRDIR)/share/man/man3/SP_equal_group_ids.3
file path=$(USRDIR)/share/man/man3/SP_error.3
file path=$(USRDIR)/share/man/man3/SP_join.3
file path=$(USRDIR)/share/man/man3/SP_leave.3
file path=$(USRDIR)/share/man/man3/SP_multicast.3
