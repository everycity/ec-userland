###########################################################################

prefix=/ec
exec_prefix=${prefix}
includedir=${prefix}/include/curl
cppflag_curl_staticlib=

usage()
{
    cat <<EOF
Usage: curl-config [OPTION]

Available values for OPTION include:

  --built-shared says 'yes' if libcurl was built shared
  --ca        ca bundle install path
  --cc        compiler
  --cflags    pre-processor and compiler flags
  --checkfor [version] check for (lib)curl of the specified version
  --configure the arguments given to configure when building curl
  --features  newline separated list of enabled features
  --help      display this help and exit
  --libs      library linking information
  --prefix    curl install prefix
  --protocols newline separated list of enabled protocols
  --static-libs static libcurl library linking information
  --version   output version information
  --vernum    output the version information as a number (hexadecimal)
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    # this deals with options in the style
    # --option=value and extracts the value part
    # [not currently used]
    -*=*) value=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) value= ;;
    esac

    case "$1" in
    --built-shared)
        echo yes
        ;;

    --ca)
        echo ""/ec/etc/openssl/cabundle.pem""
        ;;

    --cc)
        echo "${CC}"
        ;;

    --prefix)
        echo "$prefix"
        ;;

    --feature|--features)
        for feature in SSL IPv6 libz IDN NTLM NTLM_WB TLS-SRP ""; do
            test -n "$feature" && echo "$feature"
        done
        ;;

    --protocols)
        for protocol in DICT FILE FTP FTPS GOPHER HTTP HTTPS IMAP IMAPS POP3 POP3S RTSP SCP SFTP SMTP SMTPS TELNET TFTP; do
            echo "$protocol"
        done
        ;;

    --version)
        echo libcurl 7.38.0
        exit 0
        ;;

    --checkfor)
        checkfor=$2
        cmajor=`echo $checkfor | cut -d. -f1`
        cminor=`echo $checkfor | cut -d. -f2`
        # when extracting the patch part we strip off everything after a
        # dash as that's used for things like version 1.2.3-CVS
        cpatch=`echo $checkfor | cut -d. -f3 | cut -d- -f1`
        checknum=`echo "$cmajor*256*256 + $cminor*256 + ${cpatch:-0}" | bc`
        numuppercase=`echo 072600 | tr 'a-f' 'A-F'`
        nownum=`echo "obase=10; ibase=16; $numuppercase" | bc`

        if test "$nownum" -ge "$checknum"; then
          # silent success
          exit 0
        else
          echo "requested version $checkfor is newer than existing 7.38.0"
          exit 1
        fi
        ;;

    --vernum)
        echo 072600
        exit 0
        ;;

    --help)
        usage 0
        ;;

    --cflags)
        if test "X$cppflag_curl_staticlib" = "X-DCURL_STATICLIB"; then
          CPPFLAG_CURL_STATICLIB="-DCURL_STATICLIB "
        else
          CPPFLAG_CURL_STATICLIB=""
        fi
        if test "X${prefix}/include" = "X/usr/include"; then
          echo "$CPPFLAG_CURL_STATICLIB"
        else
          echo "${CPPFLAG_CURL_STATICLIB}-I${prefix}/include"
        fi
        ;;

    --libs)
        if test "X/ec/lib/amd64" != "X/usr/lib" -a "X/ec/lib/amd64" != "X/usr/lib64"; then
           CURLLIBDIR="-L/ec/lib/amd64 "
        else
           CURLLIBDIR=""
        fi
        if test "Xyes" = "Xyes"; then
          echo ${CURLLIBDIR}-lcurl -lidn -lssh2 -lssh2 -lumem -lnsl -lsocket -lssl -lcrypto -lssl -lcrypto -lz -lsocket -lnsl
        else
          echo ${CURLLIBDIR}-lcurl
        fi
        ;;

    --static-libs)
        if test "Xno" != "Xno" ; then
          echo /ec/lib/amd64/libcurl.a -L/ec/lib/amd64 -m64 -lumem -L/ec/lib/amd64 -lidn -lssh2 -lumem -lssl -lcrypto -lz -lsocket -lnsl
        else
          echo "curl was built with static libraries disabled" >&2
          exit 1
        fi
        ;;

    --configure)
        echo " '--prefix=/ec' '--mandir=/ec/share/man' '--infodir=/ec/share/info' '--bindir=/ec/bin/amd64' '--libdir=/ec/lib/amd64' '--sbindir=/ec/bin/amd64' '--libexecdir=/ec/lib/amd64' '--sysconfdir=/ec/etc' '--build=x86_64-pc-solaris2.11' '--localstatedir=/ec/var' '--enable-shared' '--disable-static' '--enable-http' '--enable-ftp' '--enable-file' '--enable-dict' '--enable-manual' '--enable-rtsp' '--enable-proxy' '--enable-telnet' '--enable-tftp' '--enable-pop3' '--enable-imap' '--enable-smtp' '--enable-ipv6' '--enable-nonblocking' '--enable-thread' '--enable-verbose' '--disable-sspi' '--enable-crypto-auth' '--enable-cookies' '--disable-hidden-symbols' '--disable-soname-bump' '--with-random=/dev/urandom' '--with-ssl' '--with-pic' '--with-libssh2' '--with-zlib=/ec' '--with-libidn=/ec' '--with-ca-bundle=/ec/etc/openssl/cabundle.pem' '--without-librtmp' '--disable-ldap' '--disable-ldaps' '--with-gssapi-includes=/ec/include/gssapi' '--with-gssapi-libs=/usr/lib/amd64' '--with-gssapi=/ec' 'curl_disallow_getifaddrs=yes' 'build_alias=x86_64-pc-solaris2.11' 'CC=/ec/bin/gcc' 'CFLAGS=-I/ec/include -m64 -O3   -D_LARGEFILE64_SOURCE -I/ec/include  ' 'LDFLAGS=-m64 -lumem -L/ec/lib/amd64' 'CPPFLAGS=-I/ec/include  -I/ec/include  '"
        ;;

    *)
        echo "unknown option: $1"
        usage 1
        ;;
    esac
    shift
done

exit 0
