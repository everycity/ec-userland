<service_bundle type='manifest' name='postgresql93-postinstall'>

<service
	name='tmp/postinstall/postgresql93'
	type='service'
	version='1'>

	<exec_method
		type='method'
		name='start'
		exec='sh -c &quot;[ -h /usr/lib/postgres/active ] || ln -s 9.3 /usr/lib/postgres/active&quot; ; /usr/bin/ctrun svcadm disable tmp/postinstall/postgresql93'
		timeout_seconds='60'/>

 	<exec_method
		type='method'
		name='stop'
		exec='/usr/bin/ctrun svccfg delete -f tmp/postinstall/postgresql93'
		timeout_seconds='30'/>

	<instance name='default' enabled='true'/>

	<stability value='Evolving'/>
</service>

</service_bundle>
