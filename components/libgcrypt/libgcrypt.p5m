file path=$(USRDIR)/bin/dumpsexp
file path=$(USRDIR)/bin/hmac256
file path=$(USRDIR)/bin/libgcrypt-config
file path=$(USRDIR)/bin/mpicalc

file path=$(USRDIR)/include/gcrypt.h

file path=$(USRDIR)/lib/$(MACH64)/libgcrypt.so.20.0.1
