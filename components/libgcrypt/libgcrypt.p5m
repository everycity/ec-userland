<include ec-drop-common>

set name=pkg.fmri value=pkg:/library/libgcrypt@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="GnuPG libgcrypt library"
set name=info.upstream_url value="http://www.gnupg.org"
