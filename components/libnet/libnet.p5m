file path=$(USRDIR)/include/libnet/libnet-headers.h
file path=$(USRDIR)/include/libnet/libnet-macros.h
file path=$(USRDIR)/include/libnet/libnet-structures.h
file path=$(USRDIR)/include/libnet/libnet-types.h
file path=$(USRDIR)/lib/$(MACH64)/libnet.so.1.7.0
file path=$(USRDIR)/lib/libnet.so.1.7.0
file path=$(USRDIR)/share/man/man3/libnet-functions.h.3
file path=$(USRDIR)/share/man/man3/libnet-macros.h.3
file path=$(USRDIR)/share/man/man3/libnet.h.3
link path=$(USRDIR)/lib/$(MACH64)/libnet.so target=libnet.so.1.7.0
