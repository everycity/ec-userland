# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/web/php-52/extension/php-zip@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="Zip extension to build and extract zip files with PHP"
set name=info.upstream_url value="http://pecl.php.net/package/APC"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license php52-ext-zip.license license="PHP3.01"

dir path=$(ECPREFIX)
dir path=$(ECPREFIX)/etc
dir path=$(ECPREFIX)/etc/php
dir path=$(ECPREFIX)/etc/php/5.2
dir path=$(ECPREFIX)/etc/php/5.2/conf.d
file zip.ini path=$(ECPREFIX)/etc/php/5.2/conf.d/zip.ini preserve=true


dir path=$(ECPREFIX)
dir path=$(ECPREFIX)/lib
dir path=$(ECPREFIX)/lib/php
dir path=$(ECPREFIX)/lib/php/5.2
dir path=$(ECPREFIX)/lib/php/5.2/extensions
dir path=$(ECPREFIX)/lib/php/5.2/extensions/$(MACH64)
file path=$(ECPREFIX)/lib/php/5.2/extensions/$(MACH64)/zip.so
file path=$(ECPREFIX)/lib/php/5.2/extensions/zip.so
