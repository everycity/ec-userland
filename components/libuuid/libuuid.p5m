# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/library/libuuid@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="DCE compatible Universally Unique Identifier library (from the e2fsprogs package)"
set name=info.upstream_url value="http://e2fsprogs.sourceforge.net/"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license libuuid.license license="GPLv2"

file path=$(USRDIR)/include/uuid/uuid.h
file path=$(USRDIR)/lib/$(MACH64)/libuuid.so.1.2
file path=$(USRDIR)/lib/$(MACH64)/pkgconfig/uuid.pc
file path=$(USRDIR)/lib/libuuid.so.1.2
file path=$(USRDIR)/lib/pkgconfig/uuid.pc
file path=$(USRDIR)/share/man/man3/uuid.3
file path=$(USRDIR)/share/man/man3/uuid_clear.3
file path=$(USRDIR)/share/man/man3/uuid_compare.3
file path=$(USRDIR)/share/man/man3/uuid_copy.3
file path=$(USRDIR)/share/man/man3/uuid_generate_time.3
file path=$(USRDIR)/share/man/man3/uuid_is_null.3
file path=$(USRDIR)/share/man/man3/uuid_parse.3
file path=$(USRDIR)/share/man/man3/uuid_time.3
file path=$(USRDIR)/share/man/man3/uuid_unparse.3
hardlink path=$(USRDIR)/share/man/man3/uuid_generate.3 \
    target=uuid_generate_time.3
hardlink path=$(USRDIR)/share/man/man3/uuid_generate_random.3 \
    target=uuid_generate_time.3
link path=$(USRDIR)/lib/$(MACH64)/libuuid.so \
    target=/ec/lib/$(MACH64)/libuuid.so.1
link path=$(USRDIR)/lib/$(MACH64)/libuuid.so.1 target=libuuid.so.1.2
link path=$(USRDIR)/lib/libuuid.so target=/ec/lib/libuuid.so.1
link path=$(USRDIR)/lib/libuuid.so.1 target=libuuid.so.1.2
