+{
+	char *base;
+	char *cp;
+	size_t blen;
+
+	if ((blen = strlen(buf)) == 0)
+		return (NULL);
+
+	cp = &buf[blen - 1];
+	while (cp != buf && *cp != SEP)
+		cp--;
+
+	if (cp != buf)
+		cp++;
+
+	if (blen + strlen("64/") + 1 >= buflen)
+		return NULL;
+
+	base = strdup(cp);
+	sprintf(cp, "64%c%s", SEP, base);
+	free(base);
+
+	return buf;
