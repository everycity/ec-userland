+	struct stat statbuf;
+
+	if (sizeof(void *) != 8)
+		return 0;
+
+	if (stat(buf, &statbuf) == 0 && S_ISDIR(statbuf.st_mode))
+		return 0;
+
+	if (fdp->type != C_EXTENSION)
+		return 0;
+
+	if (insert_64dir(buf, buflen) == NULL)
+		return 0;
+
+	return strlen("64/");
