# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/text/uriparser@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="A URI parser that is strictly RFC3986 compliant"
set name=info.upstream_url value="http://uriparser.sourceforge.net/"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license uriparser.license license="URIParser"

file path=$(USRDIR)/include/uriparser/Uri.h
file path=$(USRDIR)/include/uriparser/UriBase.h
file path=$(USRDIR)/include/uriparser/UriDefsAnsi.h
file path=$(USRDIR)/include/uriparser/UriDefsConfig.h
file path=$(USRDIR)/include/uriparser/UriDefsUnicode.h
file path=$(USRDIR)/include/uriparser/UriIp4.h
file path=$(USRDIR)/lib/$(MACH64)/liburiparser.so.1.0.10
file path=$(USRDIR)/lib/$(MACH64)/pkgconfig/liburiparser.pc
file path=$(USRDIR)/lib/liburiparser.so.1.0.10
file path=$(USRDIR)/lib/pkgconfig/liburiparser.pc
link path=$(USRDIR)/lib/$(MACH64)/liburiparser.so \
    target=liburiparser.so.1.0.10
link path=$(USRDIR)/lib/$(MACH64)/liburiparser.so.1 \
    target=liburiparser.so.1.0.10
link path=$(USRDIR)/lib/liburiparser.so target=liburiparser.so.1.0.10
link path=$(USRDIR)/lib/liburiparser.so.1 target=liburiparser.so.1.0.10
