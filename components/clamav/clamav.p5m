# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/security/antivirus/clamav@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="ClamAV is an open source (GPL) antivirus engine"
set name=info.upstream_url value="http://www.clamav.net/"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license clamav.license license="GPLv2"

group gid=465 groupname=clamav
user gcos-field="Clam AntiVirus" group=clamav uid=465 username=clamav login-shell=/bin/false

file files/freshclam.xml path=var/svc/manifest/site/freshclam.xml

