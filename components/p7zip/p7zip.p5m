# Transforms
<include ec-drop-common>
<transform file path=.*/lib/p7zip/7za -> default mode 0555>

set name=pkg.fmri value=pkg:/compress/p7zip@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="p7zip is a port of 7za.exe for POSIX systems"
set name=info.upstream_url value="http://p7zip.sourceforge.net/"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license p7zip.license license="GNU LGPL + unRAR"

