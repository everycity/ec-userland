set name=pkg.fmri value=pkg:/system/logrotate@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="Automatic roatation, compression, removal and mailing of log files"
set name=info.upstream_url value="https://fedorahosted.org/logrotate/"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license logrotate.license license="GPLv2"

dir path=$(ECPREFIX)
dir path=$(ECPREFIX)/bin
dir path=$(ECPREFIX)/share
dir path=$(ECPREFIX)/share/man5
dir path=$(ECPREFIX)/share/man8
file path=$(ECPREFIX)/bin/logrotate
file path=$(ECPREFIX)/share/man5/logrotate.conf.5
file path=$(ECPREFIX)/share/man8/logrotate.8
