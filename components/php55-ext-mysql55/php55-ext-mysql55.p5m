# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/web/php-55/extension/php-mysql55@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.5 (mysql 5.5 extension)"
set name=info.upstream_url value="http://www.php.net"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license php55.license license="PHP55 License"

dir path=$(ECPREFIX)
dir path=$(ECPREFIX)/etc
dir path=$(ECPREFIX)/etc/php
dir path=$(ECPREFIX)/etc/php/5.5
dir path=$(ECPREFIX)/etc/php/5.5/conf.d
dir path=$(ECPREFIX)/lib
dir path=$(ECPREFIX)/lib/php
dir path=$(ECPREFIX)/lib/php/5.5
dir path=$(ECPREFIX)/lib/php/5.5/extensions
dir path=$(ECPREFIX)/lib/php/5.5/extensions/$(MACH64)
file mysql55.ini path=$(ECPREFIX)/etc/php/5.5/conf.d/mysql55.ini preserve=true
file $(ECPREFIX)/lib/php/5.5/extensions/$(MACH64)/mysql.so \
    path=$(ECPREFIX)/lib/php/5.5/extensions/$(MACH64)/mysql55.so
file $(ECPREFIX)/lib/php/5.5/extensions/mysql.so \
    path=$(ECPREFIX)/lib/php/5.5/extensions/mysql55.so
