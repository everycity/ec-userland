# Transforms
<include ec-drop-common>
<transform dir path=ec/var/tomee15/.* -> default owner tomcat>
<transform dir path=ec/var/tomee15/.* -> default group tomcat>

set name=pkg.fmri value=pkg:/web/java-servlet/tomee15/admin@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="Tomcat J2EE Servlet/JSP Container - management webapps"
set name=info.classification value="org.opensolaris.category.2008:Web Services/Application and Web Servers"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)
set name=info.upstream_url value=http://tomee.apache.org/

license LICENSE license="Apache v2.0"

depend fmri=web/java-servlet/tomee15 type=require

# Custom additions
link path=$(USRDIR)/var/tomee15/webapps/host-manager \
    target=../../../lib/tomee15/webapps/host-manager preserve=true
link path=$(USRDIR)/var/tomee15/webapps/manager \
    target=../../../lib/tomee15/webapps/manager preserve=true

