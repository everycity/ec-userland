file path=$(USRDIR)/lib/$(MACH64)/librtmp.so.0
file path=$(USRDIR)/lib/$(MACH64)/pkgconfig/librtmp.pc
file path=$(USRDIR)/lib/librtmp.so.0
file path=$(USRDIR)/lib/pkgconfig/librtmp.pc
file path=$(USRDIR)/share/man1/rtmpdump.1
