file path=$(USRDIR)/lib/tomcat6/bin/cpappend.bat
file path=$(USRDIR)/lib/tomcat6/bin/daemon.sh
file path=$(USRDIR)/lib/tomcat6/bin/digest.bat
file path=$(USRDIR)/lib/tomcat6/bin/digest.sh
file path=$(USRDIR)/lib/tomcat6/bin/setclasspath.bat
file path=$(USRDIR)/lib/tomcat6/bin/setclasspath.sh
file path=$(USRDIR)/lib/tomcat6/bin/shutdown.bat
file path=$(USRDIR)/lib/tomcat6/bin/shutdown.sh
