file path=$(USRDIR)/lib/tomcat6/lib/servlet-api.jar
file path=$(USRDIR)/lib/tomcat6/lib/tomcat-coyote.jar
file path=$(USRDIR)/lib/tomcat6/lib/tomcat-dbcp.jar
file path=$(USRDIR)/lib/tomcat6/lib/tomcat-i18n-es.jar
file path=$(USRDIR)/lib/tomcat6/lib/tomcat-i18n-fr.jar
