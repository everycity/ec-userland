link path=$(LOCALSTATEDIR)/tomcat6/conf target=../../etc/tomcat6
link path=$(LOCALSTATEDIR)/tomcat6/logs target=../../var/log/tomcat6
link path=$(LOCALSTATEDIR)/tomcat6/webapps/ROOT \
	target=../../../lib/tomcat6/webapps/ROOT preserve=true
