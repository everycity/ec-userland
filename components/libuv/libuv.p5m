file path=$(USRDIR)/include/uv.h
file path=$(USRDIR)/lib/$(MACH64)/libuv.a
file path=$(USRDIR)/lib/$(MACH64)/libuv.la
link path=$(USRDIR)/lib/$(MACH64)/libuv.so target=libuv.so.1.0.0
link path=$(USRDIR)/lib/$(MACH64)/libuv.so.1 target=libuv.so.1.0.0
file path=$(USRDIR)/lib/$(MACH64)/libuv.so.1.0.0
file path=$(USRDIR)/lib/$(MACH64)/pkgconfig/libuv.pc
file path=$(USRDIR)/lib/libuv.a
file path=$(USRDIR)/lib/libuv.la
link path=$(USRDIR)/lib/libuv.so target=libuv.so.1.0.0
link path=$(USRDIR)/lib/libuv.so.1 target=libuv.so.1.0.0
file path=$(USRDIR)/lib/libuv.so.1.0.0
file path=$(USRDIR)/lib/pkgconfig/libuv.pc
