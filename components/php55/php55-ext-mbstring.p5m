file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfl_string.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/mbstring.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/oniguruma/oniguruma.h
