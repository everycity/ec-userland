# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/web/php-55/extension/php-mbstring@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.5 (mbstring extension)"
set name=info.upstream_url value="http://www.php.net"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license php55.license license="PHP55 License"

file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/config.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/eaw_table.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfilter.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfilter_8bit.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfilter_pass.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfilter_wchar.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfl_allocators.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfl_consts.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfl_convert.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfl_defs.h
file path=$(USRDIR)/lib/php/5.5/include/php/ext/mbstring/libmbfl/mbfl/mbfl_encoding.h
