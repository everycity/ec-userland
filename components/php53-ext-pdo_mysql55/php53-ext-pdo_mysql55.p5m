# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/web/php-53/extension/php-pdo_mysql55@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.3 (pdo_mysql 5.5 extension)"
set name=info.upstream_url value="http://www.php.net"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license php53.license license="PHP53 License"

dir path=$(ECPREFIX)
dir path=$(ECPREFIX)/etc
dir path=$(ECPREFIX)/etc/php
dir path=$(ECPREFIX)/etc/php/5.3
dir path=$(ECPREFIX)/etc/php/5.3/conf.d
dir path=$(ECPREFIX)/lib
dir path=$(ECPREFIX)/lib/php
dir path=$(ECPREFIX)/lib/php/5.3
dir path=$(ECPREFIX)/lib/php/5.3/extensions
dir path=$(ECPREFIX)/lib/php/5.3/extensions/$(MACH64)
file pdo_mysql55.ini path=$(ECPREFIX)/etc/php/5.3/conf.d/pdo_mysql55.ini preserve=true
file $(ECPREFIX)/lib/php/5.3/extensions/$(MACH64)/pdo_mysql.so \
    path=$(ECPREFIX)/lib/php/5.3/extensions/$(MACH64)/pdo_mysql55.so
file $(ECPREFIX)/lib/php/5.3/extensions/pdo_mysql.so \
    path=$(ECPREFIX)/lib/php/5.3/extensions/pdo_mysql55.so
