    target=libxcb-cursor.so.0.0.0
file path=$(USRDIR)/lib/$(MACH64)/libxcb-cursor.so.0.0.0
file path=$(USRDIR)/lib/$(MACH64)/pkgconfig/xcb-cursor.pc
link path=$(USRDIR)/lib/libxcb-cursor.so target=libxcb-cursor.so.0.0.0
link path=$(USRDIR)/lib/libxcb-cursor.so.0 target=libxcb-cursor.so.0.0.0
file path=$(USRDIR)/lib/libxcb-cursor.so.0.0.0
file path=$(USRDIR)/lib/pkgconfig/xcb-cursor.pc
