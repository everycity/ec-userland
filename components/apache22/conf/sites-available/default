<VirtualHost *:80>
	ServerAdmin webmaster@localhost

	DocumentRoot /ec/var/apache/2.2/htdocs
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	<Directory /ec/var/apache/2.2/htdocs/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Order allow,deny
		allow from all
	</Directory>

	ScriptAlias /cgi-bin/ /ec/var/apache/2.2/cgi-bin/
	<Directory "/ec/var/apache/2.2/cgi-bin">
		AllowOverride None
		Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		Order allow,deny
		Allow from all
	</Directory>

	ErrorLog /ec/var/apache/2.2/log/error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel warn

	CustomLog /ec/var/apache/2.2/log/access.log combined

</VirtualHost>
