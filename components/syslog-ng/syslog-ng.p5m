# Transforms
<include ec-drop-common>
<transform file path=.*/etc/.* -> default preserve true>

set name=pkg.fmri value=pkg:/service/syslog-ng@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="A highly portable syslog solution to create secure, flexible and reliable logging infrastructure in production environments"
set name=info.upstream_url value="http://www.balabit.com/network-security/syslog-ng/opensource-logging-system"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license syslog-ng.license license="SyslogNG"

file path=$(USRDIR)/bin/loggen
file path=$(USRDIR)/bin/pdbtool
file path=$(USRDIR)/bin/syslog-ng
file path=$(USRDIR)/bin/syslog-ng-ctl
file path=$(USRDIR)/bin/update-patterndb
file path=$(SYSCONFDIR)/syslog-ng/modules.conf preserve=true
file path=$(SYSCONFDIR)/syslog-ng/scl.conf preserve=true
file path=$(USRDIR)/lib/libsyslog-ng.so.0.0.0
file path=$(USRDIR)/lib/syslog-ng/libaffile.so
file path=$(USRDIR)/lib/syslog-ng/libafprog.so
file path=$(USRDIR)/lib/syslog-ng/libafsocket-notls.so
file path=$(USRDIR)/lib/syslog-ng/libafsocket-tls.so
file path=$(USRDIR)/lib/syslog-ng/libafstreams.so
file path=$(USRDIR)/lib/syslog-ng/libafuser.so
file path=$(USRDIR)/lib/syslog-ng/libbasicfuncs.so
file path=$(USRDIR)/lib/syslog-ng/libconfgen.so
file path=$(USRDIR)/lib/syslog-ng/libconvertfuncs.so
file path=$(USRDIR)/lib/syslog-ng/libcsvparser.so
file path=$(USRDIR)/lib/syslog-ng/libdbparser.so
file path=$(USRDIR)/lib/syslog-ng/libdummy.so
file path=$(USRDIR)/lib/syslog-ng/libsyslogformat.so
file path=$(USRDIR)/share/include/scl/pacct/plugin.conf
file path=$(USRDIR)/share/include/scl/syslogconf/README
file path=$(USRDIR)/share/include/scl/syslogconf/convert-syslogconf.awk
file path=$(USRDIR)/share/include/scl/syslogconf/plugin.conf
file path=$(USRDIR)/share/include/scl/system/generate-system-source.sh mode=0755
file path=$(USRDIR)/share/include/scl/system/plugin.conf
file path=$(USRDIR)/share/man/man1/loggen.1
file path=$(USRDIR)/share/man/man1/pdbtool.1
file path=$(USRDIR)/share/man/man1/syslog-ng-ctl.1
file path=$(USRDIR)/share/man/man5/syslog-ng.conf.5
file path=$(USRDIR)/share/man/man8/syslog-ng.8
file path=$(USRDIR)/share/xsd/patterndb-1.xsd
file path=$(USRDIR)/share/xsd/patterndb-2.xsd
file path=$(USRDIR)/share/xsd/patterndb-3.xsd
link path=$(USRDIR)/lib/libsyslog-ng.so target=libsyslog-ng.so.0.0.0
link path=$(USRDIR)/lib/libsyslog-ng.so.0 target=libsyslog-ng.so.0.0.0
link path=$(USRDIR)/lib/syslog-ng/libafsocket.so target=libafsocket-tls.so

# Custom Entries
file path=$(SYSCONFDIR)/syslog-ng/syslog-ng.conf preserve=true
file files/syslog-ng-manifest.xml.$(ZTYPE) path=$(SVCMANIFEST)/site/syslog-ng.xml \
    restart_fmri=svc:/system/manifest-import:default

file 64/lib/$(MACH64)/libsyslog-ng.so.0.0.0 path=$(USRDIR)/lib/$(MACH64)/libsyslog-ng.so.0.0.0
link path=$(USRDIR)/lib/$(MACH64)/libsyslog-ng.so target=libsyslog-ng.so.0.0.0
link path=$(USRDIR)/lib/$(MACH64)/libsyslog-ng.so.0 target=libsyslog-ng.so.0.0.0
