# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/library/database/gdbm@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="GNU Database Manager"
set name=info.upstream_url value="http://www.gnu.org/software/gdbm/"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license gdbm.license license="GPLv2"

file path=$(USRDIR)/include/gdbm.h
file path=$(USRDIR)/share/info/gdbm.info
file path=$(USRDIR)/lib/$(MACH64)/libgdbm.so.3.0.0
file path=$(USRDIR)/lib/libgdbm.so.3.0.0
file path=$(USRDIR)/share/man/man3/gdbm.3
link path=$(USRDIR)/lib/$(MACH64)/libgdbm.so target=libgdbm.so.3.0.0
link path=$(USRDIR)/lib/$(MACH64)/libgdbm.so.3 target=libgdbm.so.3.0.0
link path=$(USRDIR)/lib/libgdbm.so target=libgdbm.so.3.0.0
link path=$(USRDIR)/lib/libgdbm.so.3 target=libgdbm.so.3.0.0
