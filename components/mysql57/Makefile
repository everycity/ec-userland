include ../../make-rules/shared-macros.mk

CMAKE= cmake

COMPONENT_NAME=		mysql
COMPONENT_FMRI=		database/mysql-57
COMPONENT_MJR_VERSION=	5.7
COMPONENT_MNR_VERSION=	21
COMPONENT_VERSION=	$(COMPONENT_MJR_VERSION).$(COMPONENT_MNR_VERSION)
COMPONENT_LICENSE=	GPLv2
COMPONENT_PROJECT_URL=	"https://dev.mysql.com/"
COMPONENT_SUMMARY=	MySQL Server 5.7
COMPONENT_SRC=		$(COMPONENT_NAME)-$(COMPONENT_VERSION)
COMPONENT_ARCHIVE=	$(COMPONENT_SRC).tar.gz
COMPONENT_ARCHIVE_HASH=	sha256:fa205079c27a39c24f3485e7498dd0906a6e0b379b4f99ebc0ec38a9ec5b09b7
COMPONENT_ARCHIVE_URL=	http://www.mirrorservice.org/sites/ftp.mysql.com/Downloads/MySQL-5.7/$(COMPONENT_ARCHIVE)

include ../../make-rules/prep.mk
include ../../make-rules/justmake.mk
include ../../make-rules/ips.mk

CFLAGS +=	-DHAVE_CURSES_H -I$(USRINCDIR)
CXXFLAGS +=	-DHAVE_CURSES_H -I$(USRINCDIR)
LDFLAGS +=	-ltinfo

MYSQL_LIB_ROOT =	lib/mysql/$(COMPONENT_MJR_VERSION)
CMAKE_BINDIR.32 =	$(MYSQL_LIB_ROOT)/bin
CMAKE_BINDIR.64 =	$(MYSQL_LIB_ROOT)/bin/$(MACH64)
CMAKE_LIBDIR.32 =	$(MYSQL_LIB_ROOT)/lib
CMAKE_LIBDIR.64 =	$(MYSQL_LIB_ROOT)/lib/$(MACH64)
CMAKE_PLUGINDIR.32 =	$(MYSQL_LIB_ROOT)/plugins
CMAKE_PLUGINDIR.64 =	$(MYSQL_LIB_ROOT)/plugins/$(MACH64)
CMAKE_INCLUDEDIR.32 =	$(MYSQL_LIB_ROOT)/include
CMAKE_INCLUDEDIR.64 =	$(MYSQL_LIB_ROOT)/include/$(MACH64)
CMAKE_SHAREDIR =	$(MYSQL_LIB_ROOT)/share

CMAKE_OPTIONS+= -DCMAKE_C_COMPILER="$(CC)"
CMAKE_OPTIONS+= -DCMAKE_CXX_COMPILER="$(CXX)"
CMAKE_OPTIONS+= -DCMAKE_C_FLAGS="$(CFLAGS)"
CMAKE_OPTIONS+= -DCMAKE_CXX_FLAGS="$(CXXFLAGS)"

CMAKE_OPTIONS+= -DWITH_BOOST=system
CMAKE_OPTIONS+= -DWITH_EDITLINE=system
CMAKE_OPTIONS+= -DWITH_LIBEVENT=system
CMAKE_OPTIONS+= -DWITH_LZ4=system
CMAKE_OPTIONS+=	-DWITH_PROTOBUF=system
CMAKE_OPTIONS+= -DWITH_READLINE=system
CMAKE_OPTIONS+= -DWITH_SSL=system
CMAKE_OPTIONS+= -DWITH_ZLIB=system

CMAKE_OPTIONS+= -DBUILD_CONFIG=mysql_release
CMAKE_OPTIONS+= -DINSTALL_LAYOUT=SVR4
CMAKE_OPTIONS+= -DCMAKE_INSTALL_PREFIX=$(USRDIR)
CMAKE_OPTIONS+= -DINSTALL_BINDIR=$(CMAKE_BINDIR.$(BITS))
CMAKE_OPTIONS+= -DINSTALL_DOCDIR=share/doc/mysql/$(COMPONENT_MJR_VERSION)
CMAKE_OPTIONS+= -DINSTALL_INCLUDEDIR=$(CMAKE_INCLUDEDIR.$(BITS))
CMAKE_OPTIONS+= -DINSTALL_LIBDIR=$(CMAKE_LIBDIR.$(BITS))
CMAKE_OPTIONS+= -DINSTALL_MANDIR=$(MYSQL_LIB_ROOT)/man
CMAKE_OPTIONS+= -DINSTALL_SHAREDIR=$(CMAKE_SHAREDIR)
CMAKE_OPTIONS+= -DINSTALL_MYSQLSHAREDIR=$(CMAKE_SHAREDIR)
CMAKE_OPTIONS+= -DINSTALL_SUPPORTFILESDIR=$(CMAKE_SHAREDIR)
CMAKE_OPTIONS+= -DINSTALL_PLUGINDIR=$(CMAKE_PLUGINDIR.$(BITS))
CMAKE_OPTIONS+= -DINSTALL_SBINDIR=$(CMAKE_BINDIR.$(BITS))
CMAKE_OPTIONS+= -DINSTALL_SCRIPTDIR=$(CMAKE_BINDIR.$(BITS))
CMAKE_OPTIONS+= -DMYSQL_DATADIR=$(CONFIGURE_LOCALSTATEDIR)/mysql/$(COMPONENT_MJR_VERSION)/data
CMAKE_OPTIONS+= -DSYSCONFDIR=$(CONFIGURE_SYSCONFDIR)/mysql/$(COMPONENT_MJR_VERSION)
CMAKE_OPTIONS+= -DWITH_EXAMPLE_STORAGE_ENGINE=1
CMAKE_OPTIONS+= -DWITH_INNOBASE_STORAGE_ENGINE=1
CMAKE_OPTIONS+= -DWITH_INNODB_MEMCACHED=ON
CMAKE_OPTIONS+= -DWITH_EXTRA_CHARSETS=all
CMAKE_OPTIONS+= -DENABLE_DTRACE=ON
CMAKE_OPTIONS+= -DCMAKE_INSTALL_RPATH=$(CMAKE_LIBDIR.$(BITS))

LDFLAGS.32	+=	-L$(USRDIR)/$(MYSQL_LIB_ROOT)/lib -R$(USRDIR)/$(MYSQL_LIB_ROOT)/lib
LDFLAGS.64	+=	-L$(USRDIR)/$(MYSQL_LIB_ROOT)/lib/$(MACH64) -R$(USRDIR)/$(MYSQL_LIB_ROOT)/lib/$(MACH64)
LDFLAGS += $(LDFLAGS.$(BITS))

COMPONENT_PRE_BUILD_ACTION += cd $(@D);
COMPONENT_PRE_BUILD_ACTION += export LDFLAGS="$(LDFLAGS)";
COMPONENT_PRE_BUILD_ACTION += $(CMAKE) -j$(JOBS) . $(CMAKE_OPTIONS);
COMPONENT_PRE_BUILD_ACTION += $(GSED) -i -e 's!$(CC)!$(CXX)!' libmysql/CMakeFiles/libmysql.dir/link.txt;

build:		$(BUILD_32_and_64)

install:	$(INSTALL_32_and_64)
