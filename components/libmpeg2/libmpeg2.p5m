file path=$(USRDIR)/bin/$(MACH64)/mpeg2dec
file path=$(USRDIR)/bin/corrupt_mpeg2
file path=$(USRDIR)/bin/extract_mpeg2
file path=$(USRDIR)/bin/mpeg2dec
file path=$(USRDIR)/include/mpeg2dec/mpeg2.h
file path=$(USRDIR)/include/mpeg2dec/mpeg2convert.h
file path=$(USRDIR)/lib/$(MACH64)/libmpeg2.so.0.1.0
file path=$(USRDIR)/lib/$(MACH64)/libmpeg2convert.so.0.0.0
file path=$(USRDIR)/lib/$(MACH64)/pkgconfig/libmpeg2.pc
file path=$(USRDIR)/lib/$(MACH64)/pkgconfig/libmpeg2convert.pc
file path=$(USRDIR)/lib/libmpeg2.so.0.1.0
file path=$(USRDIR)/lib/libmpeg2convert.so.0.0.0
file path=$(USRDIR)/lib/pkgconfig/libmpeg2.pc
file path=$(USRDIR)/lib/pkgconfig/libmpeg2convert.pc
file path=$(USRDIR)/share/man/man1/extract_mpeg2.1
file path=$(USRDIR)/share/man/man1/mpeg2dec.1
