    target=libmpeg2convert.so.0.0.0
link path=$(USRDIR)/lib/libmpeg2.so target=libmpeg2.so.0.1.0
link path=$(USRDIR)/lib/libmpeg2.so.0 target=libmpeg2.so.0.1.0
link path=$(USRDIR)/lib/libmpeg2convert.so target=libmpeg2convert.so.0.0.0
link path=$(USRDIR)/lib/libmpeg2convert.so.0 target=libmpeg2convert.so.0.0.0
