# Transforms
<include ec-drop-common>
<transform file path=.*/etc/bash.d/.* -> default mode 0644>
<transform file path=.*/etc/inputrc -> default mode 0644>
<transform file path=.*/etc/bash.d/.* -> default preserve true>

set name=pkg.fmri value=pkg:/shell/standard-settings@1.0,$(BUILD_VERSION)
set name=pkg.summary value="Default inputrc, profile and bash configuration"
#set name=info.upstream_url value=""
#set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license everycity.license license="CDDL"

dir path=$(SYSCONFDIR)/bash.d

# Deliver links inside /etc to help users find what they are looking for
$(ECZONE)link path=etc/bash.d target=/$(SYSCONFDIR)/bash.d
$(ECZONE)link path=etc/inputrc target=/$(SYSCONFDIR)/inputrc
$(ECZONE)link path=etc/profile target=/$(SYSCONFDIR)/profile

# Set up our custom inputrc file
file files/inputrc path=$(SYSCONFDIR)/inputrc preserve=true

# Note we don't want to preserve /etc/profile, users shouldn't mess with it
file files/profile.$(ZTYPE) path=$(SYSCONFDIR)/profile

# Overwrite the default login and su files to fix paths once and for all
file files/login.$(ZTYPE) path=etc/default/login
file files/su.$(ZTYPE) path=etc/default/su

# Deliver our bash.d settings
file files/bash.d/10_shell.sh path=$(SYSCONFDIR)/bash.d/10_shell.sh
file files/bash.d/15_user.sh path=$(SYSCONFDIR)/bash.d/15_user.sh
file files/bash.d/20_colours.sh path=$(SYSCONFDIR)/bash.d/20_colours.sh
file files/bash.d/25_prompt.sh path=$(SYSCONFDIR)/bash.d/25_prompt.sh
file files/bash.d/30_checkwinsize.sh path=$(SYSCONFDIR)/bash.d/30_checkwinsize.sh
file files/bash.d/35_gnuterminfo.sh.$(ZTYPE) path=$(SYSCONFDIR)/bash.d/35_gnuterminfo.sh
file files/bash.d/40_path.sh.$(ZTYPE) path=$(SYSCONFDIR)/bash.d/40_path.sh
file files/bash.d/45_history.sh path=$(SYSCONFDIR)/bash.d/45_history.sh
file files/bash.d/50_windowtitle.sh path=$(SYSCONFDIR)/bash.d/50_windowtitle.sh
file files/bash.d/55_manpath.sh.$(ZTYPE) path=$(SYSCONFDIR)/bash.d/55_manpath.sh
file files/bash.d/60_toolprefs.sh.$(ZTYPE) path=$(SYSCONFDIR)/bash.d/60_toolprefs.sh
file files/bash.d/70_aliases.sh.$(ZTYPE) path=$(SYSCONFDIR)/bash.d/70_aliases.sh
file files/bash.d/75_safetyfirst.sh path=$(SYSCONFDIR)/bash.d/75_safetyfirst.sh
file files/bash.d/80_motd.sh.$(ZTYPE) path=$(SYSCONFDIR)/bash.d/80_motd.sh
file files/bash.d/90_per_user_root_profile.sh path=$(SYSCONFDIR)/bash.d/90_per_user_root_profile.sh
