# Transforms
<include ec-drop-common>
<transform dir path=$(SYSCONFDIR)/sudoers.d -> default mode 0750>
<transform dir path=$(SYSCONFDIR)/sudoers.d -> default user root>
<transform dir path=$(SYSCONFDIR)/sudoers.d -> default group root>
<transform file path=$(USRDIR)/bin/sudoedit -> default mode 4111>
<transform file path=$(SYSCONFDIR)/sudoers -> default mode 0440>
<transform file path=$(SYSCONFDIR)/sudoers -> default user root>
<transform file path=$(SYSCONFDIR)/sudoers -> default group root>
<transform file path=$(SYSCONFDIR)/sudoers -> default preserve true>
<transform file path=$(USRDIR)/bin/sudoreplay -> default mode 0111>
<transform file path=$(USRDIR)/bin/visudo -> default mode 0111>
<transform file path=$(USRDIR)/bin/sudo -> default mode 04111>
<transform file path=$(USRDIR)/lib/sesh -> default mode 0111>

set name=pkg.fmri value=pkg:/security/sudo@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="Sudo security authentication utility"
set name=info.upstream_url value="http://www.sudo.ws"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license sudo.license license="SUDO"

dir path=etc/sudoers.d
file path=$(USRDIR)/bin/sudoedit
file path=$(USRDIR)/bin/sudoreplay
file path=$(USRDIR)/bin/visudo
file path=etc/sudoers
file path=$(USRDIR)/include/sudo_plugin.h
file path=$(USRDIR)/lib/sudo_noexec.so
file path=$(USRDIR)/lib/sudoers.so
file path=$(USRDIR)/share/doc/sudo/CONTRIBUTORS
file path=$(USRDIR)/share/doc/sudo/ChangeLog
file path=$(USRDIR)/share/doc/sudo/HISTORY
file path=$(USRDIR)/share/doc/sudo/LICENSE
file path=$(USRDIR)/share/doc/sudo/NEWS
file path=$(USRDIR)/share/doc/sudo/README
file path=$(USRDIR)/share/doc/sudo/TROUBLESHOOTING
file path=$(USRDIR)/share/doc/sudo/UPGRADE
file path=$(USRDIR)/share/doc/sudo/sample.pam
file path=$(USRDIR)/share/doc/sudo/sample.sudo.conf
file path=$(USRDIR)/share/doc/sudo/sample.sudoers
file path=$(USRDIR)/share/doc/sudo/sample.syslog.conf
file path=$(USRDIR)/share/locale/da/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/da/LC_MESSAGES/sudoers.mo
file path=$(USRDIR)/share/locale/eo/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/eo/LC_MESSAGES/sudoers.mo
file path=$(USRDIR)/share/locale/eu/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/eu/LC_MESSAGES/sudoers.mo
file path=$(USRDIR)/share/locale/fi/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/fi/LC_MESSAGES/sudoers.mo
file path=$(USRDIR)/share/locale/it/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/ja/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/ja/LC_MESSAGES/sudoers.mo
file path=$(USRDIR)/share/locale/pl/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/pl/LC_MESSAGES/sudoers.mo
file path=$(USRDIR)/share/locale/ru/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/uk/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/uk/LC_MESSAGES/sudoers.mo
file path=$(USRDIR)/share/locale/zh_CN/LC_MESSAGES/sudo.mo
file path=$(USRDIR)/share/locale/zh_CN/LC_MESSAGES/sudoers.mo
file path=$(USRDIR)/share/man/man1m/sudo_plugin.1m
file path=$(USRDIR)/share/man/man1m/sudoedit.1m
file path=$(USRDIR)/share/man/man1m/sudoreplay.1m
file path=$(USRDIR)/share/man/man1m/visudo.1m
file path=$(USRDIR)/share/man/man4/sudoers.4
hardlink path=$(USRDIR)/bin/sudo target=sudoedit
hardlink path=$(USRDIR)/share/man/man1m/sudo.1m target=sudoedit.1m

depend fmri=pkg:/editor/vim type=require
