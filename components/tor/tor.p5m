# Transforms
<include ec-drop-common>
<transform file path=.*/etc/.* -> default preserve true>
<transform file path=.*/etc/.* -> default mode 0644>

set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.upstream_url value=$(COMPONENT_PROJECT_URL)
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license $(COMPONENT_NAME).license license="$(COMPONENT_LICENSE)"

file path=$(USRDIR)/bin/$(MACH64)/tor
file path=$(USRDIR)/bin/$(MACH64)/tor-gencert
file path=$(USRDIR)/bin/$(MACH64)/tor-resolve
file path=$(USRDIR)/bin/$(MACH64)/torify
file path=$(USRDIR)/bin/tor
file path=$(USRDIR)/bin/tor-gencert
file path=$(USRDIR)/bin/tor-resolve
file path=$(USRDIR)/bin/torify
file path=$(USRDIR)/share/doc/tor/tor-gencert.html
file path=$(USRDIR)/share/doc/tor/tor-resolve.html
file path=$(USRDIR)/share/doc/tor/tor.html
file path=$(USRDIR)/share/doc/tor/torify.html
file path=$(USRDIR)/share/man/man1/tor-gencert.1
file path=$(USRDIR)/share/man/man1/tor-resolve.1
file path=$(USRDIR)/share/man/man1/tor.1
file path=$(USRDIR)/share/man/man1/torify.1
file path=$(USRDIR)/share/tor/geoip
file path=$(SYSCONFDIR)/tor/tor-tsocks.conf
file path=$(SYSCONFDIR)/tor/torrc.sample
