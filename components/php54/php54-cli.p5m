# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/web/php-54/php-cli@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.4 (cli)"
set name=info.upstream_url value="http://www.php.net"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license php54.license license="PHP54 License"

depend fmri=pkg:/web/php-54/php-common type=require

file path=$(USRDIR)/lib/php/5.4/bin/$(MACH64)/php
file path=$(USRDIR)/lib/php/5.4/bin/php
file path=$(USRDIR)/lib/php/5.4/include/php/sapi/cli/cli.h
file path=$(USRDIR)/lib/php/5.4/share/man/man1/php.1
link path=$(USRDIR)/bin/php target=php-cli preserve=true pkg.linted=true
link path=$(USRDIR)/bin/$(MACH64)/php target=php-cli preserve=true pkg.linted=true
link path=$(USRDIR)/bin/php-cli \
     target=../lib/php/5.4/bin/php preserve=true pkg.linted=true mediator=php mediator-version=5.4
link path=$(USRDIR)/bin/$(MACH64)/php-cli \
     target=../../lib/php/5.4/bin/$(MACH64)/php preserve=true pkg.linted=true mediator=php mediator-version=5.4
link path=$(USRDIR)/share/man/man1/php.1 \
     target=../../../lib/php/5.4/share/man/man1/php.1 preserve=true pkg.linted=true mediator=php mediator-version=5.4
