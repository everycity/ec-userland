# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/web/server/apache-22/module/apache-php53@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="PHP Server 5.3"
set name=info.upstream_url value="http://www.php.net"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license php53.license license="PHP53 License"

file files/php53.load path=$(SYSCONFDIR)/apache/2.2/mods-available/php53.load preserve=true
file files/php53.conf path=$(SYSCONFDIR)/apache/2.2/mods-available/php53.conf preserve=true
file $(USRDIR)/lib/apache/2.2/modules/$(MACH64)/libphp5.so \
    path=$(USRDIR)/lib/apache/2.2/modules/$(MACH64)/mod_php53.so
file $(USRDIR)/lib/apache/2.2/modules/libphp5.so \
    path=$(USRDIR)/lib/apache/2.2/modules/mod_php53.so
link path=$(SYSCONFDIR)/apache/2.2/mods-enabled/php53.load \
    target=../mods-available/php53.load preserve=true
link path=$(SYSCONFDIR)/apache/2.2/mods-enabled/php53.conf \
    target=../mods-available/php53.conf preserve=true
depend fmri=pkg:/web/php-53/php-common type=require
