# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/database/redis@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="Persistent Key-Value Data Store"
set name=info.upstream_url value="http://code.google.com/p/redis/"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license redis.license license="BSD"

file files/redis.conf path=$(ECPREFIX)/etc/redis/redis.conf preserve=true mode=0644
file files/redis.xml path=var/svc/manifest/site/redis.xml \
    restart_fmri=svc:/system/manifest-import:default

dir path=$(ECPREFIX)
dir path=$(ECPREFIX)/bin
dir path=$(ECPREFIX)/etc
dir path=$(ECPREFIX)/etc/redis
dir path=$(ECPREFIX)/include
dir path=$(ECPREFIX)/lib
dir path=$(ECPREFIX)/sbin
dir path=$(ECPREFIX)/share
dir path=$(ECPREFIX)/share/man
dir path=$(ECPREFIX)/share/man/man8
file path=$(ECPREFIX)/bin/redis-benchmark
file path=$(ECPREFIX)/bin/redis-check-aof
file path=$(ECPREFIX)/bin/redis-check-dump
file path=$(ECPREFIX)/bin/redis-cli
file path=$(ECPREFIX)/bin/redis-server
