# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/x11/utility/makedepend@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="A C-preprocessor like utility to determine build-time dependencies"
set name=info.upstream_url value="http://xorg.freedesktop.org/releases/individual/util/"
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license makedepend.license license="OpenGroup"

dir path=$(ECPREFIX)
dir path=$(ECPREFIX)/bin
dir path=$(ECPREFIX)/bin/$(MACH64)
dir path=$(ECPREFIX)/share
dir path=$(ECPREFIX)/share/man
dir path=$(ECPREFIX)/share/man/man1
file path=$(ECPREFIX)/bin/$(MACH64)/makedepend
file path=$(ECPREFIX)/bin/makedepend
file path=$(ECPREFIX)/share/man/man1/makedepend.1
