# Transforms
<include ec-drop-common>

set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.upstream_url value=$(COMPONENT_PROJECT_URL)
set name=info.source_url value=$(COMPONENT_ARCHIVE_URL)

license $(COMPONENT_NAME).license license="$(COMPONENT_LICENSE)"

depend fmri=pkg:/web/server/apache-24/httpd type=require
depend fmri=pkg:/web/php-55/php-common type=require

file files/php55.load path=$(SYSCONFDIR)/apache/2.4/mods-available/php55.load preserve=true
file files/php55.conf path=$(SYSCONFDIR)/apache/2.4/mods-available/php55.conf preserve=true
file $(USRDIR)/lib/apache/2.4/modules/$(MACH64)/libphp5.so \
    path=$(USRDIR)/lib/apache/2.4/modules/$(MACH64)/mod_php55.so
file $(USRDIR)/lib/apache/2.4/modules/libphp5.so \
    path=$(USRDIR)/lib/apache/2.4/modules/mod_php55.so
link path=$(SYSCONFDIR)/apache/2.4/mods-enabled/php55.load \
    target=../mods-available/php55.load preserve=true
link path=$(SYSCONFDIR)/apache/2.4/mods-enabled/php55.conf \
    target=../mods-available/php55.conf preserve=true
